<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/deleteOptionButton"
        android:text="@string/deleteOptionButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#f00a0a" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/onDetailsEditButton"
        android:id="@+id/onOptionEditButton"
        android:layout_below="@+id/deleteOptionButton"
        android:layout_centerHorizontal="true"
        android:textColor="#0532fa" />
</RelativeLayout>